<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="radiobuttons.cursoandroid.com.radiobuttons.MainActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/comida_preferida"
        android:id="@+id/textView" />

    <RadioGroup
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:background="#d5cdcd"
        android:layout_weight="0.18"
        android:id="@+id/radiogroupId">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lasanha"
            android:id="@+id/lasanhaId"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parmegiana"
            android:id="@+id/parmegianaId"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MacarrÃ£o"
            android:id="@+id/macarraoId"
            android:checked="false" />

    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/escolha_botao"
        android:id="@+id/botaoEscolherId"
        android:layout_gravity="center_horizontal"
        android:background="#5e50f5"
        android:backgroundTintMode="screen" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textoExibicaoId"
        android:layout_gravity="center_horizontal"
        android:background="#d9d0d0" />
</LinearLayout>
